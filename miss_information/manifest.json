{
    "manifest_version": 3,
    "name": "Miss Information",
    "version": "1.0",
    "description": "Instant context for your complicated Twitter feed.",

    "content_scripts": [
        {
          "matches": [
            "http://www.twitter.com/*",
            "https://twitter.com/*"
          ],
          "run_at": "document_idle",   
          "js": ["scripts/content.js"],
          "css": ["stylesheets/styles.css"]
        }
    ]
}
  